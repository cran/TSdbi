# check if schema query is supported.
z <- try(dbGetQuery(con, paste(
       "SELECT COLUMN_NAME FROM INFORMATION_SCHEMA.Columns ",
       " WHERE TABLE_SCHEMA='test' AND table_name='A' ;")))

if (inherits(z, "try-error") ) warning("skipping TABLE_SCHEMA queries")  else {

#  This is generic sql way to get table info.
